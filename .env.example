# ==========================================
# SmartClinic Environment Variables
# ==========================================
# Copy this file to .env.local and fill in the values

# MongoDB connection string (MongoDB Atlas recommended)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smartclinic

# JWT secret key for authentication (use a strong random string, min 32 chars)
JWT_SECRET=your-jwt-secret-key-change-me-in-production

# Google Gemini API key (get free key at https://aistudio.google.com/apikey)
GEMINI_API_KEY=your-gemini-api-key

# Public app URL (for CORS / absolute links)
NEXT_PUBLIC_APP_URL=http://localhost:3000
